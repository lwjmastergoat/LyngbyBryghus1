
@using LyngbyBrygRepo
@model AdminTabel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}


<h1 class="text-center">Rediger Bruger @Model.Navn</h1>
<hr />

<div class="loginwrap d-block mx-auto">
    <form method="post" action="/CMS/Admin/Edit" class="text-center">
        <label class="pushdown"><b class="">Brugernavn</b></label>
        <br />
        <input type="text" name="Navn" class="inputs" value="@Model.Navn" />
        <br />
        <label><b>Kodeord</b></label>
        <br />
        <input type="password" name="Password" class="inputs" value="@Model.Password" />
        <br />
        <select class="roleselect" name="Role" @(Model.ID == (int)Session["id"] ? "disabled" : null)>

            <option value="1" @(Model.Rolle == 2 ? "selected" : null)>Editor</option>
            <option value="2" @(Model.Rolle == 3 ? "selected" : null)>Admin</option>
        </select>
        <button type="submit" class="btn alert-primary redigerbtn" name="Submit">Rediger</button>
        <input type="hidden" value="@Model.ID" name="ID" />
    </form>
</div>