}

<div class="container">
    <section class="row">
        <div class="col-md-12">
            <center><h2 id="indexheadline">KundeDetaljer</h2></center>
        </div>
    </section>

    <section class="row">
        <div class="col-md-12">

            @if (Session["id"] == null)
            {
                <a href="/KundeLogin/">Login</a>
            }
