            {
                <a href="/Login/Logout">Log Ud</a>
                <br />
                <text><b>Kunde ID</b> |</text> @Session["id"]
            }

            <br />

            @if (Session["id"] == null)
            {
                <span></span>
            }
            else
            {
                <p>
                    <a href="/Kunde/Ordre/KundeOrdre/">Ordredetaljer</a><br />
                    <a href="/Kunde/Ordre/KundeDetaljer/">Oplysninger</a>
                </p>
            }


        </div>
