<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/CSS/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/CSS/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/CSS/mainlayout.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container-fluid">
        <header class="row">
            <nav class="navbar navbar-expand-lg navbar-light col-md-12">
                <img class="navbar-brand img-fluid logo" src="~/Content/Images/Generelt/hjelm_sort.png">
                <img class="navbar-brand img-fluid logo" src="~/Content/Images/Generelt/Logo_Skrift.png" />
                <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Index/">forside</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Produkter/">produkter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Bestilling/">bestilling</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Kontakt/">kontakt</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/KundeLogin/Index/">login</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <section class="row">

            <div class="col-md-8 offset-md-2 indhold">
                @RenderBody()
            </div>
        </section>

        <footer class="row">
            <div class="col-md-3 offset-md-2">
                <img class="img-fluid footerlogo" src="~/content/Images/Generelt/footer_hjelm.png" />
                <img class="img-fluid footerlogoskrift" src="~/Content/Images/Generelt/Logo_Skrift.png" />
            </div>

            <div class="col-md-2">
                <center>
                    <h5 class="footeradresse">
                        Svinget 2 <br />
                        8570 Trustrup, Lyngby J
                    </h5>
                </center>

            </div>

            <div class="col-md-2 facebook">
                <a href="https://www.facebook.com/LyngbyBryghus/" target="_blank">
                    <span class="fa-stack fa-2x contact">
                        <i class="fa fa-circle fa-stack-2x icon-background"></i>
                        <i class="fa fa-facebook  fa-stack-1x"></i>
                    </span>
                </a>

                <a href="mailto:contact@lbh.dk?Subject=Bestilling%20spoergsmaal" target="_top">
                    <span class="fa fa-stack fa-2x contact">
                        <i class="fa fa-circle fa-stack-2x icon-background"></i>
                        <i class="fa fa-envelope fa-stack-1x "></i>

                    </span>
                </a>

            </div>



        </footer>
    </div>


    @* SCRIPTS *@
    <script src="~/Content/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Content/Scripts/bootstrap.min.js"></script>
</body>
</html>

