@* HOME - ProduktDetaljer *@

@using LyngbyBrygRepo.Models;
@using LyngbyBrygRepo.Models.R_Models;
@using LyngbyBrygRepo;
@model ProduktKategoriJoin


@{
    ViewBag.Title = "ProduktDetaljer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2"></div>
    <h2>@Model.Navn</h2>



    <p>
        <b>Øltype:</b> @Model.KategoriensNavn<br />
        <b> Styrke: </b> @Model.Alkohol % <br />
        <b> Bitterhed: </b> @Model.Bitterhed IBU <br />
        <b> Farve: </b> @Model.Farve EBC <br />
        <b> Gærtype: </b> @Model.Gaertype <br />

    </p>


    <p>@Model.Beskrivelse</p>

    <p><b>@Model.Pris kr.</b></p>
    <button class="bestil btn btn-dark">Bestilling her</button>
</div>