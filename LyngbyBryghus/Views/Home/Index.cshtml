@using LyngbyBryghus.ViewModels

@model Forsiden

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <section class="row">
        <div class="col-md-12">
            <h1>Velkommen til Lyngby Bryghus' hjemmeside</h1>
        </div>
    </section>

    <section class="row">
        <div class="col-md-8">
            @foreach (var Nyhed in Model.Nyheder)
            {
                <h2>@Nyhed.Overskrift</h2>

                <h6>@Nyhed.Underoverskrift</h6>

                <p>@Nyhed.Indhold</p>

                //mangler billede
            }
        </div>
    </section>

    @*OM OS*@

    <section class="row">
        <div class="col-md-12">
            <h2>@Model.Overskrift </h2>
        </div>
    </section>

    <section class="row">
        <div class="col-md-12">
            <p>@Model.Indhold</p>
        </div>
    </section>
</div>
















