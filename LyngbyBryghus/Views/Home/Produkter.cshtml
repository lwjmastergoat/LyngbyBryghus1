@* HOME - Produkter *@

@using LyngbyBrygRepo.Models;
@using LyngbyBrygRepo;
@model List<ProduktKategoriJoin>


@{
    ViewBag.Title = "Produkter";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Vores Øl</h2>

@foreach (var item in Model)

{
    <h2>@item.Navn</h2> <br />
    
    <p><b>@item.KategoriensNavn</b></p>
    
    <p><b>@item.Alkohol - @item.Bitterhed IBU - @item.Farve EBC - @item.Gaertype </b></p>


    <p>@item.Beskrivelse</p>

    <p>@item.Pris Kroner</p>

    <img src="~/Content/Images/@item.Billede"  alt="Produktbillede" />

    
}